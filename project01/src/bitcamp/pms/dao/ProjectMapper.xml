<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bitcamp.pms.dao.ProjectDao">
	<!-- 테이블의 컬럼 이름과 VO 클래스의 프로퍼티 이름을 미리 연결해 둘 수 있다. -->
	<resultMap type="Project" id="ProjectMap">
		<!-- PK 컬럼은 id 태그로 선언하라! -->
		<id column="PNO" property="no" />
		<result column="TITLE" property="title" />
		<result column="SDT" property="startDate" />
		<result column="EDT" property="endDate" />
		<result column="DESCT" property="description" />
		<result column="STAT" property="state" />

		<!-- 컬럼명과 프로퍼티명이 같을 때는 선언하지 않아도 된다. -->
	</resultMap>

	<!-- 파라미터나 결과에 대해 데이터 타입을 지정할 때, mybatis 설정 파일에 선언된 별명을 사용한다. -->
	<insert id="insert" parameterType="Project">
		insert into PROJECTS(TITLE,SDT,EDT,DESCT)
		values(#{title},#{startDate},#{endDate},#{description})
	</insert>

	<update id="update" parameterType="Project">
		update PROJECTS set
		TITLE=#{title},
		SDT=#{startDate},
		EDT=#{endDate},
		DESCT=#{description}
		where PNO=#{no}
	</update>

	<!-- parameterType이 원시 데이터 타입일 경우, => 프로퍼티 이름은 아무거나 넣어도 된다. -->
	<delete id="delete" parameterType="int">
		delete from PROJECTS
		where PNO=#{no}
	</delete>

	<!-- resultMap에 컬럼에 대응하는 프로퍼티 정보를 미리 설정했기 때문에, SQL 문에서는 각 컬럼에 대해 별명을 부여할 
		필요가 없다. 단, resultType 속성 대신 resultMap 속성을 지정해야 한다. -->
	<select id="selectList" resultMap="ProjectMap">
		select PNO, TITLE, SDT, EDT, DESCT, STAT
		from PROJECTS
	</select>

	<select id="selectOne" parameterType="int" resultMap="ProjectMap">
		select PNO, TITLE, SDT, EDT, DESCT, STAT
		from PROJECTS
		where PNO=#{no}
	</select>
</mapper>
